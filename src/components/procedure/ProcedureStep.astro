---
interface Props {
  number: number;
  title: string;
}

const { number, title } = Astro.props as Props;
---

<li class="bg-white border border-gray-200 rounded-lg p-6">
  <div class="flex items-start gap-4">
    <span
      class="shrink-0 w-8 h-8 rounded-full bg-red-800 text-white flex items-center justify-center font-bold"
    >
      {number}
    </span>

    <div>
      <h3 class="font-semibold text-gray-800 mb-2">
        {title}
      </h3>
      <div class="text-gray-700 space-y-2">
        <slot />
      </div>
    </div>
  </div>
</li>