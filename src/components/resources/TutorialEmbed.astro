---
interface Props {
  title: string;
  description: string;
  embedUrl: string;
}

const { title, description, embedUrl } = Astro.props as Props;
---

<div class="mb-12">
  <h3 class="text-xl font-semibold text-gray-800 mb-2">
    {title}
  </h3>

  <p class="text-gray-600 mb-4">
    {description}
  </p>

  <!-- Contenedor -->
  <div
    class="w-full
      aspect-video
      min-h-125
      rounded-lg
      overflow-hidden
      flex
      items-center
      justify-center
      bg-white"
  >
    <iframe
      src={embedUrl}
      width="960"
      height="569"
      frameborder="0"
      allowfullscreen
      class="max-w-full max-h-full"></iframe>
  </div>

  <a
    href={embedUrl.replace("/embed", "/present")}
    target="_blank"
    class="inline-block mt-3 text-sm text-red-800 hover:text-red-700 font-medium"
  >
    Abrir tutorial en pantalla completa
  </a>
</div>