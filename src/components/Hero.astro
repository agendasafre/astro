---
// src/components/HeroSection.astro
import { Image } from "astro:assets";
// Define component props with TypeScript
export interface Props {
  title: string;
  imageUrl: any; // Use 'any' type for local static imports
  imageAlt: string;
  ctaText?: string; // Optional prop
  ctaLink?: string; // Optional prop
}

const { title, imageUrl, imageAlt, ctaText, ctaLink } = Astro.props;
---

<section class="py-12 md:py-20">
  <div class="container mx-auto px-4">
    <!-- Flex Container for the layout -->
    <div class="flex flex-col md:flex-row items-center gap-8">
      <!-- Left side: Text content -->
      <div class="md:w-1/2 text-center md:text-left">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">
          {title}
        </h1>
        <p class="text-lg text-gray-600 mb-6">
          <slot name="subtitle" />
        </p>
        {
          ctaText && ctaLink && (
            <a
              href={ctaLink}
              class="inline-block bg-red-800 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:bg-red-700 transition duration-300"
            >
              {ctaText}
            </a>
          )
        }
      </div>

      <!-- Right side: Image -->
      <div class="md:w-1/2">
        <Image
          src={imageUrl}
          alt={imageAlt}
          widths={[400, 800, 1200]}
          sizes="(max-width: 768px) 100vw, 50vw"
          class="rounded-lg shadow-lg object-cover w-full h-auto"
        />
      </div>
    </div>
  </div>
</section>
